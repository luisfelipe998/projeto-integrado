meta {
  name: Create Loan
  type: http
  seq: 3
}

post {
  url: {{host}}/loans
  body: json
  auth: basic
}

auth:basic {
  username: {{username}}
  password: {{password}}
}

body:json {
  {
    "userId": 3,
