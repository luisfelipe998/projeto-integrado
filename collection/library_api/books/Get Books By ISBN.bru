meta {
  name: Get Books By ISBN
  type: http
  seq: 3
}

get {
  url: {{host}}/books?isbn=978-0132350884
  body: none
  auth: basic
}

params:query {
  isbn: 978-0132350884
  ~status: available
  ~status: rented
  ~status: late
}

auth:basic {
  username: {{username}}
  password: {{password}}
}

assert {
  res.body.length: eq 1
  res.body[0].isbn: eq 978-0132350884
  res.status: eq 200
}
